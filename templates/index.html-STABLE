<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>HAGM — Here’s A Good Movie</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<script>
document.getElementById("randomMovieBtn").addEventListener("click", function(event) {
  event.preventDefault();

  const form = document.getElementById("filterForm");
  const formData = new FormData(form);

  fetch("/random_movie", {
    method: "POST",
    body: formData
  })
  .then(response => response.text())
  .then(html => {
    document.getElementById("movieCardContainer").innerHTML = html;
  })
  .catch(err => console.error("Error fetching movie:", err));
});
</script>




  <style>

 body {
    background-color: #fbfafb !important;
  }

    .movie-poster { max-height: 500px; width: auto; }
    @media (min-width: 768px) { .movie-poster { max-height: 300px; } }
    @media (min-width: 1200px) { .movie-poster { max-height: 400px; } }
  </style>
</head>
<body>
<div class="container py-4">

  <!-- Header -->
  <div class="pt-5">
    <div class="d-flex justify-content-center align-items-center mb-4 flex-row flex-nowrap" style="max-width: 100%;">
      <img src="{{ url_for('static', filename='hag_m_granny.png') }}" 
           alt="Granny Popcorn"
           class="img-fluid me-3"
           style="max-height: 18vh; width: auto; flex-shrink: 0;">
      <div class="text-start">
        <div>
          <img src="{{ url_for('static', filename='hagm_title.png') }}" 
               alt="HAG'M Title"
               class="img-fluid mb-2 d-block"
               style="max-height: 12.5vh; width: auto; margin: 0 auto;">
        </div>
        <div>
          <img src="{{ url_for('static', filename='hag_m_subtitle.png') }}" 
               alt="Here’s A Good Movie"
               class="img-fluid d-block"
               style="max-height: 3vh; width: auto; margin: -20px auto 0;">
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <form method="POST" class="mb-4">
    <div class="row g-3 align-items-end">
      <div class="col-12 col-md-4">
        <label for="rated" class="form-label">Rating</label>
        <select class="form-select" name="rated" id="rated">
          {% for r in all_rated %}
            <option value="{{ r }}" {% if r == selected_rated %}selected{% endif %}>{{ r }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="col-12 col-md-4">
        <label for="genre" class="form-label">Genre</label>
        <select class="form-select" name="genre" id="genre">
          {% for g in all_genres %}
            <option value="{{ g }}" {% if g == selected_genre %}selected{% endif %}>{{ g }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="col-12 col-md-4">
        <label for="runtime" class="form-label">Runtime</label>
        <select class="form-select" name="runtime" id="runtime">
          <option value="Any" {% if selected_runtime == "Any" %}selected{% endif %}>Any</option>
          <option value="<90" {% if selected_runtime == "<90" %}selected{% endif %}>Under 90 min</option>
          <option value="90-120" {% if selected_runtime == "90-120" %}selected{% endif %}>90–120 min</option>
          <option value="120-150" {% if selected_runtime == "120-150" %}selected{% endif %}>120–150 min</option>
          <option value="150+" {% if selected_runtime == "150+" %}selected{% endif %}>Over 150 min</option>
        </select>
      </div>
    </div>
    <div class="text-center my-4">
      <button type="submit" name="random" value="1" class="btn btn-primary btn-lg">
        Pick Random Movie
      </button>
    </div>
  </form>

  <!-- Stats -->
  <p class="text-muted text-center">Total movies: <strong>{{ total_raw }}</strong> | Matching: <strong>{{ count }}</strong></p>

  <!-- Movie card -->
  {% if movie %}
  <div class="card shadow-sm mb-5">
    <div class="row g-0 align-items-start">
      {% if movie.Poster %}
      <div class="col-12 col-md-4 text-center p-3 d-md-block d-none">
        <img src="{{ movie.Poster }}" alt="{{ movie.Title }} poster" class="img-fluid movie-poster rounded">
      </div>
      <div class="col-12 d-md-none text-center p-3">
        <img src="{{ movie.Poster }}" alt="{{ movie.Title }} poster" class="img-fluid movie-poster rounded">
      </div>
      {% endif %}
      <div class="col-12 col-md-8">
        <div class="card-body">
          <h5 class="card-title mb-1">{{ movie.Title }}</h5>
          {% if movie.Year %}<p class="text-muted mb-2">({{ movie.Year|int }})</p>{% endif %}
          {% if movie.Directors %}<p class="mb-1"><strong>Director:</strong> {{ movie.Directors }}</p>{% endif %}
          {% if movie.Genres %}<p class="mb-1"><strong>Genre:</strong> {{ movie.Genres }}</p>{% endif %}
          {% if movie.ContentRating %}<p class="mb-1"><strong>Rating:</strong> {{ movie.ContentRating }}</p>{% endif %}
          {% if movie.RuntimeMin %}<p class="mb-1"><strong>Runtime:</strong> {{ movie.RuntimeMin }} min</p>{% endif %}
          <div class="mb-2">
            {% if movie.CriticScore is not none %}
              <span class="badge bg-success me-1">Critics: {{ movie.CriticScore|round(0) }}%</span>
            {% endif %}
            {% if movie.AudienceScore is not none %}
              <span class="badge bg-primary">Audience: {{ movie.AudienceScore|round(0) }}%</span>
            {% endif %}
          </div>
          {% if movie.Plot %}<p class="card-text">{{ movie.Plot }}</p>{% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}

  <!-- Footer -->
  <footer class="text-center py-3 mt-5">
    <small>
      Powered by <a href="https://www.themoviedb.org/" target="_blank">TMDb</a>
    </small>
  </footer>
</div>
</body>
</html>
